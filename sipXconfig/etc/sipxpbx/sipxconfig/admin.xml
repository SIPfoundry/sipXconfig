<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE model 
    PUBLIC "-//SIPFoundry//sipXconfig//Model specification 2.0//EN" 
    "http://www.sipfoundry.org/sipXconfig/dtd/setting_2_0.dtd">
<model>
  <type id="policy-type">
    <enum>
      <option>
        <label>Empty Password/VM Pin Fields</label>
        <value>blank</value>        
      </option>
      <option>
        <label>Default Password/VM Pin Values</label>
        <value>defaultValue</value>
      </option>
    </enum>
  </type>
  <type id="true-false">
	<boolean>
		<true>
			<value>true</value>
		</true>
		<false>
			<value>false</value>
		</false>
	</boolean>
  </type>  
  <group name="configserver-config">
    <setting name="password-policy">
      <type refid="policy-type" />
    </setting>
    <setting name="password-default">
      <type>
        <string minLen="8" password="yes"/>
      </type>
    </setting>
    <setting name="vmpin-default">
      <type>
        <string minLen="4" password="yes"/>
      </type>
    </setting>     
    <setting name="externalAliases.aliasAddins" advanced="yes">
      <type>
        <string/>
      </type>      
    </setting>
    <setting name="mappingRules.externalRulesFileName" advanced="yes">
      <type>
        <string/>
      </type>      
    </setting>
    <setting name="fallbackRules.externalRulesFileName" advanced="yes">
      <type>
        <string/>
      </type>      
    </setting>
    <setting name="replicationManagerImpl.nThreads" advanced="yes">
      <type>
        <integer />
      </type>
      <value>2</value>
    </setting>
    <setting name="replicationManagerImpl.pageSize" advanced="yes">
      <type>
        <integer />
      </type>
      <value>1000</value>
    </setting>
    <setting name="replicationManagerImpl.useDynamicPageSize" advanced="yes">
      <type>
        <boolean />
      </type>
      <value>0</value>
    </setting>    
  </group>
  <group name="ldap-management">
    <setting name="age">
      <type>
    	<integer/>
      </type>
      <value>24</value>
    </setting>
    <setting name="pageImportSize">
      <type>
    	<integer/>
      </type>
      <value>1000</value>
    </setting>    
    <setting name="disable">
      <type>
    	<boolean/>
      </type>
      <value>false</value>
    </setting>    
    <setting name="delete">
      <type>
    	<boolean/>
      </type>
      <value>false</value>
    </setting>  
  </group>
  <group name="resource-limits">
    <setting name="fd-soft">
      <type>
    	<integer/>
      </type>
      <value>32768</value>
    </setting> 
    <setting name="fd-hard">
      <type>
    	<integer/>
      </type>
      <value>65536</value>
    </setting>
    <setting name="core-enabled">
      <type refid="true-false"/>
      <value>false</value>
    </setting>       
  </group>
</model>
