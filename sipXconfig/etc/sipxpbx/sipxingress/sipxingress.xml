<?xml version="1.0"?>
<!DOCTYPE model PUBLIC "-//SIPFoundry//sipXconfig//Model specification 2.0//EN" 
  "http://www.sipfoundry.org/sipXconfig/dtd/setting_2_0.dtd">
<model>
  <type id="loglevel">
    <enum>
      <option>
        <value>DEBUG</value>
      </option>
      <option>
        <value>INFO</value>
      </option>
      <option>
        <value>NOTICE</value>
      </option>
      <option>
        <value>WARNING</value>
      </option>
      <option>
        <value>ERR</value>
      </option>
      <option>
        <value>CRIT</value>
      </option>
      <option>
        <value>ALERT</value>
      </option>
      <option>
        <value>EMERG</value>
      </option>
    </enum>
  </type>
  <!-- Enum seems more user friendly than boolean -->
  <type id="replaceOrKeep">
    <enum>
      <option><value>0</value></option> <!-- Leave alone -->
      <option><value>1</value></option> <!-- Replace -->
    </enum>
  </type>
  <type id="true-false">
	<boolean>
		<true>
			<value>true</value>
		</true>
		<false>
			<value>false</value>
		</false>
	</boolean>
  </type>   
  <group name="ingress-configuration">
    <setting name="SIPX_INGRESS_LOG_LEVEL">
      <type refid="loglevel" />
      <value>NOTICE</value>
    </setting>
	<setting name="MYSQL_PASSWORD">
      <type>
        <string minLen="8" password="yes"/>
      </type>
    </setting>    
    <setting name="SIPX_INGRESS_TCP_PORT" hidden="yes">
      <type>
        <integer />
      </type>
      <value>5060</value>
    </setting>
    <setting name="SIPX_INGRESS_UDP_PORT" hidden="yes">
      <type>
        <integer />
      </type>
      <value>5060</value>
    </setting>
    <setting name="SIPX_INGRESS_TLS_PORT" hidden="yes">
      <type>
        <integer />
      </type>
      <value>5061</value>
    </setting>
    <setting name="SIPX_INGRESS_TABLE_DIALOG_VERSION" hidden="yes">
      <type>
        <integer />
      </type>
      <value>7</value>
    </setting>
    <setting name="SIPX_INGRESS_TABLE_DIALOG_VARS_VERSION" hidden="yes">
      <type>
        <integer />
      </type>
      <value>1</value>
    </setting>
  </group>
  
</model>
