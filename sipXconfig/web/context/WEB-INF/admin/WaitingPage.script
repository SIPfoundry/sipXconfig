<?xml version="1.0"?>
<!DOCTYPE script PUBLIC
	"-//Apache Software Foundation//Tapestry Script Specification 3.0//EN"
	"http://jakarta.apache.org/tapestry/dtd/Script_3_0.dtd">
<script>
<body>
<![CDATA[
dojo.require("dojo.io.*");
dojo.require("dojo.io.ScriptSrcIO");

var waitForServerDown = true;
var timeToExpire = 0;
var targetUrl = location.href;
var base_url = "http://" + getUrlBase();


function getUrlBase() {
      var host = location.host;
      var pos = host.indexOf(":");
      if (pos != -1)
           return host.substr(0, pos);
       else
       return host;
}

function makeRequest() {
    dojo.io.bind({
    	preventCache:true,
        url: targetUrl,
        load: onLoad,
        error:onError,
        mimetype: "text/plain",
        timeout: onTimeout,
        timeoutSeconds: 5
    });
}
function onLoad(type, data, event){
	if(waitForServerDown){
		if(timeToExpire>1800000){
		    alert("Timeout expired. Server is not down.");
		    window.location=base_url;
	    }
	    else{
			setTimeout('makeRequest()', 5000);
		    timeToExpire+=5000;
	    }
	}else{
		window.location=base_url;
	}
}
function onError(type,error){
	waitForServerDown = false;
	setTimeout('makeRequest()', 5000);
}
function onTimeout(){
	waitForServerDown = false;
	setTimeout('makeRequest()', 5000);
}
function onWaitingListenerResponse() {
}
]]>
</body>
<initialization>
   makeRequest();
   triggerWaitingListener();
</initialization>
</script>
