<?xml version="1.0"?>
<!DOCTYPE model 
    PUBLIC "-//SIPFoundry//sipXconfig//Model specification 2.0//EN" 
    "http://www.sipfoundry.org/sipXconfig/dtd/setting_2_0.dtd">
<model>
  <type id="int_boolean">
    <boolean>
      <true><value>1</value></true>
      <false><value>0</value></false>
    </boolean>
  </type>
  <type id="port-number">
    <integer required="yes" min="1024" max="65534"/>
  </type>  
	<group name="SYSTEM_Params">
		<label>System</label>
		<profileName>SYSTEM Params</profileName>
		<setting name="DNSPriServerIP">
			<label>DNS Server</label>
			<type>
				<ipaddr/>	
			</type>
			<value></value>
			<description>IP Address of the primary DNS server</description>
		</setting>
		<setting name="DNSSecServerIP" advanced="yes">
			<label>Secondary DNS Server</label>
			<type>
				<ipaddr/>	
			</type>
			<value></value>
			<description>IP Address of the secondary DNS server</description>
		</setting>
		<setting name="EnableSyslog" advanced="yes">
			<label>Use Syslog</label>
			<type>
				<boolean/>
			</type>
			<value>0</value>
			<description>If checked syslog server is used.</description>			
		</setting>		
		<setting name="SyslogServerIP" advanced="yes">
			<label>Syslog Server</label>
			<type>
				<ipaddr/>	
			</type>
			<value></value>
			<description>IP Address of the syslog server</description>			
		</setting>
	</group>
  <group name="SIP_Params">
    <label>SIP Params</label>
    <profileName>SIP Params</profileName>
    <setting name="ISPROXYUSED" advanced="yes">
      <label>Use Proxy</label>
			<type>
				<boolean/>
			</type>
      <value>1</value>
      <description>If unchecked proxy isnâ€™t used, the internal routing table is used instead. 
				If checked gateway will use SIP proxy and SIP Proxy Address has to be set.				
      </description>
    </setting>
    <setting name="PROXYNAME" advanced="yes">
      <label>SIP Proxy Domain Name</label>
      <type>
        <string/>
      </type>
      <value/>
      <description>Defines the Home Proxy Domain Name.If specified, the Proxy Name is used as Request-URI in
        REGISTER, INVITE and other SIP messages. If not specified, the Proxy IP address is used
        instead.</description>
    </setting>
    <setting name="PROXYIP" advanced="yes">
      <label>SIP Proxy Address</label>
      <type>
        <ipaddr/>
      </type>
      <value/>
      <description>IP address and optionally port number of the primary Proxy server you are using. Enter the IP
        address as FQDN or in dotted format notation for example 201.10.8.1. You can also specify the selected
        port in the format: IP Address:port</description>
    </setting>
    <setting name="SIPDESTINATIONPORT" advanced="yes">
			<label>SIP Proxy Port</label>
			<type refid="port-number"/>
			<value>5060</value>
			<description>Domain name used by the gateway name.</description>
		</setting>
    <setting name="ISREGISTERNEEDED" hidden="yes">
      <label>Registration Needed</label>
			<type>
				<boolean/>
			</type>
      <value>0</value>
      <description>If checked gateway will register with SIP proxy. Usually registration is not required for FXO gateways.</description>
    </setting>
    <setting name="SIPGATEWAYNAME" advanced="yes">
			<label>Gateway Domain Name</label>
			<value></value>
			<description>Domain name used by the gateway name.</description>
		</setting>
    <setting name="TRUNKGROUP_1" advanced="yes">
      <label>Trunk Group</label>
      <type>
        <string>
          <pattern>\d+-\d+,\d+,\d+</pattern>
        </string>
      </type>
      <value>1-8,100,0</value>
    </setting>
    <setting name="MAXDIGITS">
      <label>Maximum Digits</label>
      <type>
        <integer min="1" max="49"/>
      </type>
      <value>15</value>
      <description>Maximum number of digits that can be dialed. The valid range is 1 to 49.</description>
    </setting>
  </group>
  <group name="SIPgw">
    <label>T1 Params</label>
    <setting name="FramingMethod">
      <label>Framing method</label>
      <type>
        <enum>
          <option>
            <label>ESF with CRC6</label>
            <value>0</value>
          </option>
          <option>
            <label>SF</label>
            <value>1</value>
          </option>
          <option>
            <label>F4 multiframe</label>
            <value>A</value>
          </option>
          <option>
            <label>ESF without CRC6</label>
            <value>C</value>
          </option>
        </enum>
      </type>
      <value>0</value>
    </setting>
    <setting name="PCMLawSelect">
      <label>PCM Law select</label>
      <type>
        <enum>
          <option>
            <label>Alaw</label>
            <value>1</value>
          </option>
          <option>
            <label>Mulaw</label>
            <value>3</value>
          </option>
        </enum>
      </type>
      <value>3</value>
    </setting>
    <setting name="ProtocolType">
      <label>Protocol type</label>
      <type>
        <enum>
          <option>
            <label>T1 NI2</label>
            <value>10</value>
          </option>
          <option>
            <label>T1 4ESS</label>
            <value>11</value>
          </option>
          <option>
            <label>T1 5ESS 10 ISDN</label>
            <value>13</value>
          </option>
          <option>
            <label>T1 DMS 100</label>
            <value>14</value>
          </option>
        </enum>
      </type>
      <value>13</value>
    </setting>
    <setting name="LineCode">
      <label>Line code</label>
      <type>
        <enum>
          <option>
            <label>B8ZS</label>
            <value>0</value>
          </option>
          <option>
            <label>AMI</label>
            <value>1</value>
          </option>
          <option>
            <label>HDB3</label>
            <value>2</value>
          </option>
        </enum>
      </type>
      <value>0</value>
    </setting>
    <setting name="LineBuildOut.LOSS">
      <label>Line build out loss</label>
      <type>
        <enum>
          <option>
            <label>0dB</label>
            <value>0</value>
          </option>
          <option>
            <label>-7.5dB</label>
            <value>1</value>
          </option>
          <option>
            <label>-15dB</label>
            <value>2</value>
          </option>
          <option>
            <label>-22.5dB</label>
            <value>3</value>
          </option>
        </enum>
      </type>
      <value>0</value>
    </setting>
    <setting name="TerminationSide">
      <label>Termination side</label>
      <type>
        <enum>
          <option>
            <label>User</label>
            <value>0</value>            
          </option>
          <option>
            <label>Network</label>
            <value>1</value>            
          </option>          
        </enum>        
      </type>
      <value>0</value>      
    </setting>
  </group>
</model>
