<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="authCodeManagerImpl" class="org.sipfoundry.sipxconfig.acccode.AuthCodeManagerImpl">
    <property name="sessionFactory" ref="sessionFactory" />
    <property name="coreContext" ref="coreContext" />
    <property name="daoEventPublisher" ref="daoEventPublisher"/>
  </bean>

  <bean id="authCodeManager" class="org.springframework.aop.framework.ProxyFactoryBean" parent="abstractDao">
    <property name="proxyInterfaces" 
              value="org.sipfoundry.sipxconfig.acccode.AuthCodeManager" />
    <property name="target" ref="authCodeManagerImpl" />
  </bean>
  
  <bean id="authCodes" class="org.sipfoundry.sipxconfig.accode.AuthCodes">
    <property name="authCodeManager" ref="authCodeManager" />
    <property name="addressManager" ref="addressManager" />
    <property name="featureManager" ref="featureManager" />
    <property name="settingsDao" ref="beanWithSettingsDao" />
  </bean>

  <bean id="authCodesConfig" class="org.sipfoundry.sipxconfig.acccode.AuthCodesConfig">
    <property name="authCodeManager" ref="authCodeManager" />
  </bean>
  
  <bean id="authCodeSettings" class="org.sipfoundry.sipxconfig.acccode.AuthCodeSettings" scope="prototype">
  </bean>
  
</beans>
