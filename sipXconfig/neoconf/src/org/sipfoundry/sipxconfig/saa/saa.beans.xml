<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="saaSettings" class="org.sipfoundry.sipxconfig.saa.SaaSettings" scope="prototype">
    <property name="modelFilesContext" ref="modelFilesContext"/>
  </bean>

  <bean id="saaManager" class="org.sipfoundry.sipxconfig.saa.SaaManager">
    <property name="settingsDao">
      <bean parent="beanWithSettingDao">
        <property name="target">
          <bean parent="beanWithSettingDaoImpl">
            <constructor-arg value="org.sipfoundry.sipxconfig.saa.SaaSettings"/>
          </bean>
        </property>
      </bean>
    </property>
  </bean>

  <bean id="saaConfiguration" class="org.sipfoundry.sipxconfig.saa.SaaConfiguration">
    <property name="saaManager" ref="saaManager" />
    <property name="coreContext" ref="coreContext" />
    <property name="velocityEngine" ref="velocityEngine" />
  </bean>

</beans>
