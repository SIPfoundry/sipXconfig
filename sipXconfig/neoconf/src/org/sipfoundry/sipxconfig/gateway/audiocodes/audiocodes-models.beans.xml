<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" 
	"http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

  <!-- Audiocodes digital gateways -->
  <bean id="audiocodesTP" abstract="true" class="org.sipfoundry.sipxconfig.gateway.audiocodes.AudioCodesModel">
    <property name="beanId" value="gwAudiocodesTp260" />
    <property name="profileTemplate" value="audiocodes/gateway.ini.vm" />
    <property name="digital" value="true" />
  </bean>

  <bean id="audiocodesTP260" parent="audiocodesTP">
    <property name="label" value="AudioCodes TP260" />
    <property name="maxPorts" value="4" />
  </bean>

  <bean id="audiocodesMediant" parent="audiocodesTP">
    <property name="label" value="AudioCodes Mediant 1000" />
    <property name="maxPorts" value="8" />
  </bean>

  <bean id="gwAudiocodesTp260" class="org.sipfoundry.sipxconfig.gateway.audiocodes.AudioCodesDigitalGateway"
    singleton="false" parent="gwGeneric">
  </bean>

  <!-- audiocodes Media Pack FXO gateways -->
  <bean id="audiocodesFxo" abstract="true" class="org.sipfoundry.sipxconfig.gateway.audiocodes.AudioCodesModel">
    <property name="beanId" value="gwAudiocodesMediant" />
    <property name="profileTemplate" value="audiocodes/gateway.ini.vm" />
    <property name="fxo" value="true" />
  </bean>

  <bean id="audiocodesMP1X4_4_FXO" parent="audiocodesFxo">
    <property name="label" value="AudioCodes MP114 FXO" />
    <property name="maxPorts" value="4" />
  </bean>

  <bean id="audiocodesMP1X8_8_FXO" parent="audiocodesFxo">
    <property name="label" value="AudioCodes MP118 FXO" />
    <property name="maxPorts" value="8" />
  </bean>

  <bean id="gwAudiocodesMediant" class="org.sipfoundry.sipxconfig.gateway.audiocodes.AudioCodesFxoGateway"
    singleton="false" parent="gwGeneric">
  </bean>

  <!-- AudioCodes FXS gateways -->
  <bean id="audiocodesFxs" class="org.sipfoundry.sipxconfig.gateway.audiocodes.AudioCodesFxsModel">
    <property name="label" value="AudioCodes MP11x FXS" />
    <property name="beanId" value="gwFxsAudiocodes" />
    <property name="profileTemplate" value="audiocodes/gateway.ini.vm" />
    <property name="fxs" value="true" />
    <property name="maxLineCount" value="8"></property>
  </bean>

  <bean id="gwFxsAudiocodes" class="org.sipfoundry.sipxconfig.gateway.audiocodes.AudioCodesFxsGateway" singleton="false"
    parent="abstractPhone">
    <constructor-arg ref="audiocodesFxs"></constructor-arg>
  </bean>
  
  <!-- Firmware specification -->
  <bean id="audiocodesFirmware" class="org.sipfoundry.sipxconfig.upload.UploadSpecification">
    <property name="beanId" value="upload" />
    <property name="modelFilePath" value="audiocodes/upload.xml" />
    <property name="label" value="AudioCodes Gateways" />
  </bean>
</beans>
