<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.sipfoundry.sipxconfig.feature" default-lazy="false">

  <sql-query name="enabledLocationFeatures">
    <return-scalar column="enabled_features" type="string"/> 
    <![CDATA[select feature_id as enabled_features from feature_location where location_id = :location_id]]>
  </sql-query>

  <sql-query name="enabledGlobalFeatures">
    <return-scalar column="enabled_features" type="string"/> 
    <![CDATA[select feature_id as enabled_features from feature_global]]>
  </sql-query>
  
  <sql-query name="enableGlobalFeature">
    <return-scalar column="enabled_features" type="string"/> 
    <![CDATA[select feature_id as enabled_features from feature_global]]>
  </sql-query>
  

</hibernate-mapping>
