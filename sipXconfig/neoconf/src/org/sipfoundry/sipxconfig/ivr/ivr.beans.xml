<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="callPilotSettings" class="org.sipfoundry.sipxconfig.ivr.CallPilotSettings" scope="prototype">
    <property name="modelFilesContext" ref="modelFilesContext"/>
  </bean>

  <bean id="ivrSettings" class="org.sipfoundry.sipxconfig.ivr.IvrSettings" scope="prototype">
    <property name="modelFilesContext" ref="modelFilesContext"/>
  </bean>

  <bean id="ivr" class="org.sipfoundry.sipxconfig.ivr.Ivr">
    <property name="settingsDao" ref="beanWithSettingsDao" />
    <property name="pilotSettingsDao" ref="beanWithSettingsDao" />
  </bean>

  <bean id="ivrConfig" class="org.sipfoundry.sipxconfig.ivr.IvrConfig">
    <property name="ivr" ref="ivr" />
  </bean>

</beans>
