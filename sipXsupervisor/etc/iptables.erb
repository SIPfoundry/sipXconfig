*mangle
:PREROUTING ACCEPT [0:0]
:INPUT ACCEPT [0:0]
:FORWARD ACCEPT [0:0]
:OUTPUT ACCEPT [0:0]
:POSTROUTING ACCEPT [0:0]
<%
  rules.each { |rule|
    if rule[:priority]
%>-A OUTPUT -o $(sipx.iface) -p <%= rule[:protocol] %> <%= dports(rule) %> -m comment --comment "<%= rule[:service] %>" -j DSCP --set-dscp-class EF
<%
    end
  }

  if defined? mangle && !mangle.nil?
    mangle.each { |rule|
%><%= rule %>
<%
    }
  end
%>
