bundle agent upload_snapshot {
  vars:
   any::
    "servers_file" string => "@SIPX_CFDATA@/servers";

  methods:
    any::
      "any" usebundle => "sipx_module";
      "any" usebundle => perform_upload_snapshot("$(servers_file)");
}

bundle agent perform_upload_snapshot(file) {
  vars:
    "fqdn" slist => readstringlist("$(file)", "=(.*?)end", "\n", 100, 4000);
    "dim_servers" int => readstringarray("server", "$(file)", "#[^\n]*", "[\s=]", 100, 4000);

  files:
    "@SIPX_VARDIR@/tmp/sipx-snapshot-$(fqdn).tar.gz"
      create => "true",
      perms => mog("644","@SIPXPBXUSER@","@SIPXPBXGROUP@"),
      copy_from => master_files("$(server[$(fqdn)][2])", "@SIPX_VARDIR@/tmp/sipx-snapshot-$(fqdn).tar.gz");

  reports:
    linux::
      "Uploading snapshot from $(server[$(fqdn)][0])";
}
