Name: @PACKAGE@
Version: @VERSION@
Release: @PACKAGE_REVISION@

Summary: CDR Call Log REST plugin for SipX REST Server.
License: LGPL
Group:    Productivity/Telephony/SIP/Servers
Vendor: SIPfoundry
Packager: SIPfoundry <sipx-dev@sipfoundry.org>
Url: http://www.sipfoundry.org/sipXrest

Obsoletes: @PACKAGE_OBSOLETE_NAME@
BuildRequires: automake
BuildRequires: java-1.7.0-openjdk-devel
BuildRequires: zip
BuildRequires: sipxcommons-ng >= %version
BuildRequires: sipxrest-ng >= %version

Source: %name-%version.tar.gz

Requires: sipxcommserverlib-ng >= %version
Requires: sipxcommons-ng >= %version
Requires: sipxrest-ng >= %version

%if %{?use_ibm_jvm}0
Requires: java-ibm >= 1.6
Requires: java-ibm-unrestricted
%endif

Prefix: %_prefix
BuildRoot: %{_tmppath}/%name-%version-root

%description
SIPX CDR Call Log REST Plugin 

%prep
%setup -q

%build
%configure @SIPX_RPM_CONFIGURE_OPTIONS@
cp config.log %name.configlog
make all

%install
export NO_BRP_CHECK_BYTECODE_VERSION=true
rm -rf $RPM_BUILD_ROOT
make DESTDIR=$RPM_BUILD_ROOT install

%clean
rm -rf $RPM_BUILD_ROOT

%files
%defattr(644,root,root,755)
%attr(755,sipx,sipx) %{_datadir}/java/sipXecs/sipXrest/plugins/

